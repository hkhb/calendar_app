<div class="main users-edit">
  <div class="container">
    <div class="form-heading">ユーザー編集</div>
    <div class="form user-forms">
        <% if @error_message %>
          <div class = "error-message">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_with model: @user, url: user_path(@user), multipart: true, data: { turbo: false } do |f| %>
          <div><%= f.label "ユーザー名" %></div>
          <div class = "user-form" ><%= f.text_field :name, class: 'user-form-field' %></div>
          <div><%= f.label "メールアドレス" %></div>
          <div class = "user-form" ><%= f.email_field :email, class: 'user-form-field' %></div>
          <div><%= f.label "新パスワード※必須" %></div>
          <div class = "user-form" ><%= f.password_field :password, class: 'user-form-field' %></div>
          <div class = "schedule-button-field">
            <%= link_to user_path(@current_user.id), class: 'back-button common-button' do %>
              戻る
            <% end %>
            <%= f.submit "保存", class: 'common-button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>