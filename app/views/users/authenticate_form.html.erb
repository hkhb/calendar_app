<div class = "main authenticate" >
    <div class ="container">
        <div class ="form-heading">ユーザー認証</div>
        <div class = "form users-form">
                <% if @error_message %>
                    <div class = "form-error">
                        <%= @error_message %>
                    </div>
                <% end %>
            <div class = "form-body">
                <%= form_with url: authenticate_user_path(@user), method: :post, data: { turbo: false } do |f| %>
                    <%= f.label :password, "パスワード", class: 'authenicate-title authenicate-forms' %>
                    <%= f.password_field :password, class: 'authenicate-form authenicate-forms' %>
                    <%= f.submit "認証", class: 'authenicate-submit authenicate-forms common-button' %>
                <% end %>
            </div>
        </div>
    </div>
</div>